<div class="page-header">
  <%= link_to beverages_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_beverage_path(@beverage), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show beverage</h1>
</div>

<dl class="dl-horizontal">
  <dt>Image:</dt>
  <dd><%=image_tag @beverage.image.url %></dd>

  <dt>Name:</dt>
  <dd><%= @beverage.name %></dd>

  <dt>Price:</dt>
  <dd><%= @beverage.price %></dd>

  <dt>Memo:</dt>
  <dd><%= @beverage.memo %></dd>

</dl>
